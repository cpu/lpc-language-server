{
	"compilerOptions": {
		"module": "CommonJS",
        "target": "ES2022",
        "moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["ES2022","DOM"],
		"outDir": "out",
		"rootDir": "src",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true
	},
	
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{ "path": "./client" },
		{ "path": "./server" }
	]
}